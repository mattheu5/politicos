        <option>Profissão</option>
        <option>Profissão</option>
        <option>Profissão</option>
        <option>Profissão</option>
        <option>Profissão</option>
        <option>Profissão</option>
        <option>Profissão</option>
        <option>Profissão</option>
        <option>Profissão</option>
    </select><br>
     <div class="form-group">
    <label for="obs">Obs</label>
    <textarea class="form-control" name="obs" rows="3" value="{{intencao.dataValues.obs}}"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Atualizar</button>
   <a href="/admin/lista/intencao_voto" class="btn btn">Listar</a>
   <input type="hidden" name="id" value="{{intencao.dataValues.id}}">
</form>
</div>
</div>